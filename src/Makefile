CC     	= g++
EXEC   	= RSA_init
CFLAGS 	= -Wall -Werror -g -L/gmp_install/lib -lgmp
all   	: $(EXEC)










#-----------------------------------------------------------------------------------------------------------
# ----------------------------------------------- Executable -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
RSA_init	: RSA_init.o largePrime_naive.o largePrime.o list.o
	$(CC) $(CFLAGS) -o $@ $^


#-----------------------------------------------------------------------------------------------------------
# ----------------------------------------------- Modules  -------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
%.o 		: %.cc
		$(CC) $(CFLAGS) -c -o $@ $^

#-----------------------------------------------------------------------------------------------------------
# ------------------------------------------ General Methods -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper
clean:
	rm -f *.o $(EXEC)
mrproper: clean
	rm -rf $(EXEC)
